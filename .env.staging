# Production Environment Configuration

# Database Configuration
POSTGRES_DB=chatapp_production
POSTGRES_USER=chatapp
POSTGRES_PASSWORD=mysecretpassword
DATABASE_URL=postgresql://chatapp:mysecretpassword@postgres:5432/chatapp_production

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password
REDIS_URL=redis://:your_secure_redis_password@redis:6379

# JWT Configuration
JWT_SECRET=your_very_secure_jwt_secret_key_at_least_32_characters
JWT_REFRESH_SECRET=your_very_secure_jwt_refresh_secret_key_at_least_32_characters

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
S3_BUCKET=your-production-s3-bucket
S3_BUCKET_STAGING=your-staging-s3-bucket

# Firebase Configuration
FCM_SERVER_KEY=your_firebase_server_key

# SMS Configuration
SMS_API_KEY=your_sms_provider_api_key

# Frontend Configuration
REACT_APP_API_URL=https://api.your-domain.com
REACT_APP_WS_URL=wss://api.your-domain.com

# Docker Registry
REGISTRY=ghcr.io
IMAGE_NAME=your-org/chatapp

# Monitoring Configuration
GRAFANA_PASSWORD=your_secure_grafana_password

# Deployment Configuration
PRODUCTION_HOST=your-production-server-ip
PRODUCTION_USER=deploy
PRODUCTION_URL=https://your-domain.com
STAGING_HOST=your-staging-server-ip
STAGING_USER=deploy

# SSL Configuration (for nginx)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-s3-bucket

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=https://your-domain.com

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/chatapp

# Performance Configuration
MAX_CONNECTIONS=200
CONNECTION_TIMEOUT=30000
SOCKET_TIMEOUT=60000
