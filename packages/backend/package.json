{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend API server for WhatsApp chat app",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=services|models|utils|validation",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:performance": "jest --testPathPattern=performance",
    "test:security": "jest --testPathPattern=security",
    "test:coverage": "jest --coverage",
    "test:all": "jest --coverage --verbose",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "db:migrate": "node database/migrations/migrate.js",
    "db:seed": "node database/seeds/seed.js seed",
    "db:seed:test": "node database/seeds/seed.js seed test",
    "db:clear": "node database/seeds/seed.js clear",
    "db:reset": "node database/seeds/seed.js reset",
    "db:stats": "node database/seeds/seed.js stats",
    "type-check": "tsc --noEmit",
    "docker:build": "docker build -f Dockerfile -t chatapp-backend .",
    "docker:run": "docker run -p 3000:3000 chatapp-backend",
    "migrate": "node database/migrations/migrate.js",
    "seed": "node database/seeds/seed.js"
  },
  "dependencies": {
    "@types/node-cron": "^3.0.11",
    "aws-sdk": "^2.1692.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "ffmpeg-static": "^5.2.0",
    "firebase-admin": "^13.5.0",
    "fluent-ffmpeg": "^2.1.3",
    "helmet": "^7.0.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mime-types": "^3.0.1",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^4.2.1",
    "pg": "^8.11.3",
    "redis": "^4.6.7",
    "sharp": "^0.34.4",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.1",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/jest": "^29.5.3",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/mime-types": "^3.0.1",
    "@types/multer": "^1.4.7",
    "@types/node": "^24.6.1",
    "@types/pg": "^8.10.2",
    "@types/socket.io-client": "^3.0.0",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^11.0.0",
    "jest": "^29.6.1",
    "socket.io-client": "^4.8.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^3.12.7",
    "typescript": "^5.9.3"
  }
}
