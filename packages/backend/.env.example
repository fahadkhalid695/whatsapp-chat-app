# Backend Environment Variables
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/whatsapp_chat
DB_HOST=localhost
DB_PORT=5432
DB_NAME=whatsapp_chat
DB_USER=postgres
DB_PASSWORD=postgres
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# Media Storage
MEDIA_STORAGE_TYPE=local
MEDIA_LOCAL_PATH=./uploads

# S3 configuration (if using S3 storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=whatsapp-chat-media
S3_ENDPOINT=

# Media file size limits (in bytes)
MAX_FILE_SIZE=10485760
MAX_IMAGE_SIZE=5242880
MAX_VIDEO_SIZE=52428800
MAX_AUDIO_SIZE=10485760
MAX_DOCUMENT_SIZE=10485760

# Thumbnail settings
THUMBNAIL_WIDTH=300
THUMBNAIL_HEIGHT=300
THUMBNAIL_QUALITY=80
VIDEO_THUMBNAIL_WIDTH=300
VIDEO_THUMBNAIL_HEIGHT=300
VIDEO_THUMBNAIL_TIME=1

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100