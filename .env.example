# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/whatsapp_chat

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# Server Configuration
PORT=3001
NODE_ENV=development

# Media Storage
MEDIA_STORAGE_TYPE=local
AWS_S3_BUCKET=whatsapp-chat-media
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# SMS Service (for phone verification)
SMS_SERVICE_API_KEY=your-sms-service-api-key
SMS_SERVICE_URL=https://api.smsservice.com

# Push Notifications
FCM_SERVER_KEY=your-fcm-server-key
FCM_PROJECT_ID=your-fcm-project-id